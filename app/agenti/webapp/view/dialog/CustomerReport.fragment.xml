<core:FragmentDefinition xmlns:form="sap.ui.layout.form" xmlns:u="sap.ui.unified"
    xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <Dialog showHeader="true" title="Crea Segnalazione" contentWidth="20%">
        <content>
            <form:SimpleForm >
                <Label design="Bold" text="Problema"/>
                <TextArea value="{/value}"/>
            </form:SimpleForm>
        </content>
        <buttons>
            <Button text="Invia"
                enabled="{= ${/value} ? true : false }"
                type="Emphasized"
                press=".defaultDialogClose" />
            <Button text="Chiudi"
                type="Emphasized"
                press=".defaultDialogClose" />
        </buttons>
    </Dialog>
</core:FragmentDefinition>