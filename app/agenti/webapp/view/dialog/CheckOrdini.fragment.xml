<core:FragmentDefinition xmlns:form="sap.ui.layout.form"
    xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <Dialog showHeader="true"
        title="Selezionare un offerta">
        <buttons>
            <Button text="Chiudi"
                press=".defaultDialogClose"
                type="Emphasized" />
        </buttons>
        <content>
            <FlexBox direction="Column" class="sapUiSmallMargin">
                <Title text="Sono presenti delle offerte per questo cliente, selezionare un' offerta per procedere in modifica o chiudere per proseguire con la creazione" />
                <form:SimpleForm backgroundDesign="Transparent"
                    maxContainerCols="2"
                    editable="false"
                    layout="ResponsiveGridLayout"
                    labelSpanL="12"
                    labelSpanM="12"
                    emptySpanL="0"
                    emptySpanM="0"
                    columnsL="1"
                    columnsM="1">
                    <Label text="Cliente"
                        design="Bold" />
                    <Input editable="false"
                        value="ALBERGO RISTORANTE ALLA PERGOLA SNC DI ROSSI MARIA ROSSI CAT" />

                    <Label text="Offerte"
                        design="Bold" />
                    <Input showValueHelp="true" />
                </form:SimpleForm>
            </FlexBox>

        </content>
    </Dialog>

</core:FragmentDefinition>