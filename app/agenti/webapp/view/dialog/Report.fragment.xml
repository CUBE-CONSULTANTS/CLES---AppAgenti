<core:FragmentDefinition
    xmlns:form="sap.ui.layout.form"
    xmlns:u="sap.ui.unified"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>
    <Dialog
        showHeader="true"
        title="Crea Segnalazione"
    >
        <content>
            <form:SimpleForm>
                <RadioButtonGroup>
                    <RadioButton
                        text="Segnalazione Prodotto"
                        selected="true"
                    />
                    <RadioButton text="Modifica Anagrafica" />
                </RadioButtonGroup>
                <Label text="Note" design="Bold"/>
                <TextArea rows="4"/>
            </form:SimpleForm>
        </content>
        <buttons>
            <Button
                text="Invia"
                type="Emphasized"
                press=".defaultDialogClose"
            />
            <Button
                text="Chiudi"
                type="Emphasized"
                press=".defaultDialogClose"
            />
        </buttons>
    </Dialog>
</core:FragmentDefinition>
