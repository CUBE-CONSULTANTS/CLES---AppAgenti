<core:FragmentDefinition xmlns:form="sap.ui.layout.form" xmlns:u="sap.ui.unified"
    xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <Dialog showHeader="false" contentWidth="20%">
        <content>
            <form:SimpleForm >
                <RadioButtonGroup >
                    <RadioButton text="Problemi Prodotto" selected="true"/>
                    <RadioButton text="Modifica Indirizzo"/>
                    <RadioButton text="Incasso"/>
                </RadioButtonGroup>
            </form:SimpleForm>
            <VBox class="sapUiSmallMargin">
                <Label text="Carica un allegato" design="Bold"/>
                <u:FileUploader width="100%" style="Emphasized"
                    name="myFileUpload"
                    uploadUrl="upload/"
                    value="{/value}"
                    uploadComplete="handleUploadComplete" />
            </VBox>
        </content>
        <buttons>
            <Button text="Upload"
                enabled="{= ${/value} ? true : false }"
                type="Emphasized"
                press=".defaultDialogClose" />
            <Button text="Chiudi"
                type="Emphasized"
                press=".defaultDialogClose" />
        </buttons>
    </Dialog>
</core:FragmentDefinition>