<core:FragmentDefinition xmlns:form="sap.ui.layout.form"
    xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <Dialog title="Crea OdV" stretch="true">
        <buttons>
            <Button text="Salva come Preordine"
                enabled="{= ${/table/items/length} ? true : false }"
                type="Attention"
                press=".onCreaOdvConfirm" />
            <Button text="Salva come Offerta"
                enabled="{= ${/table/items/length} ? true : false }"
                type="Accept"
                press=".onCreaOdvConfirm" />
            <Button text="Salva come Ordine di Vendita"
                enabled="{= ${/table/items/length} ? true : false }"
                type="Accept"
                press=".onCreaOdvConfirm" />
            <Button text="Chiudi"
                type="Reject"
                press=".defaultDialogClose" />
        </buttons>
        <content>
            <VBox class="sapUiTinyMargin">
                <Title titleStyle="H4"
                    wrapping="true"
                    text="Cliente: {/info/customer/customer_name}" />
                <Label class="sapUiSmallMarginTop"
                    text="Note"
                    design="Bold" />
                <TextArea rows="2"
                    cols="120"
                    value="{/info/nota}" />
            </VBox>
            <Table items="{/table/items}"
                alternateRowColors="true"
                popinLayout="GridSmall">
                <headerToolbar>
                    <OverflowToolbar >
                        <ToolbarSpacer />
                        <Button text="Esporta"
                            type="Emphasized"
                            icon="sap-icon://excel-attachment"
                            press=".defaultDialogClose" />
                    </OverflowToolbar>
                </headerToolbar>
                <columns>
                    <Column demandPopin="true"
                        width="12em"
                        popinDisplay="Block"
                        minScreenWidth="Desktop">
                        <Label design="Bold"
                            wrapping="true"
                            text="Categoria" />
                    </Column>
                    <Column demandPopin="true"
                        minScreenWidth="Desktop">
                        <Label design="Bold"
                            wrapping="true"
                            text="Prodotto" />
                    </Column>
                    <Column demandPopin="true"
                        minScreenWidth="Desktop">
                        <Label design="Bold"
                            wrapping="true"
                            text="Descrizione" />
                    </Column>
                    <Column demandPopin="true"
                        minScreenWidth="Desktop">
                        <Label design="Bold"
                            wrapping="true"
                            text="U acq" />
                    </Column>
                    <Column demandPopin="true"
                        minScreenWidth="Desktop">
                        <Label design="Bold"
                            wrapping="true"
                            text="U prz" />
                    </Column>
                    <Column demandPopin="true"
                        minScreenWidth="Desktop">
                        <Label design="Bold"
                            wrapping="true"
                            text="U Qta" />
                    </Column>
                    <Column demandPopin="true"
                        minScreenWidth="Desktop">
                        <Label design="Bold"
                            wrapping="true"
                            text="Disponibilita" />
                    </Column>
                    <Column demandPopin="true"
                        minScreenWidth="Desktop">
                        <Label design="Bold"
                            wrapping="true"
                            text="UM" />
                    </Column>
                    <Column demandPopin="true"
                        minScreenWidth="Desktop">
                        <Label design="Bold"
                            wrapping="true"
                            text="Prz" />
                    </Column>
                    <Column demandPopin="true"
                        minScreenWidth="Desktop">
                        <Label design="Bold"
                            wrapping="true"
                            text="Qta" />
                    </Column>
                </columns>
                <items>
                    <ColumnListItem >
                        <cells>
                            <Text text="{category}" />
                            <Text text="{product}" />
                            <Text text="{description}" />
                            <Text text="{u_acq}" />
                            <Text text="{u_prz}" />
                            <Text text="{u_qta}" />
                            <Text text="{disponibilita}" />
                            <Text text="KG" />
                            <Text text="{price}" />
                            <Text text="{quantity}" />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </content>
    </Dialog>
</core:FragmentDefinition>