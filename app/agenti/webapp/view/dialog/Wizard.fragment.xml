<core:FragmentDefinition
    xmlns:form="sap.ui.layout.form"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.f"
    xmlns:card="sap.f.cards"
    xmlns:u="sap.ui.unified"
>
    <Dialog
        showHeader="true"
        stretch="true"
        title="Crea documento"
    >
        <buttons>
            <Button
                text="Indietro"
                visible="{= ${/currentStep} === 0 ? false : true }"
                press=".onWizardPreviousStep"
                type="Emphasized"
            />
            <Button
                visible="{= (${/step3/formEnabled} &amp;&amp; ${/currentStep} === 2 ) ? true : false }"
                type="Success"
                text="Salva"
                press=".onCustomerConfirmPress"
            />
            <Button
                type="Success"
                text="Conferma"
                visible="{= (${/selectedMode} === 'PREORDINE' &amp;&amp; ${/currentStep} === 1 ) ? true : false }"
                icon="sap-icon://save"
                press=".onPreorderConfirmPress"
            />
        </buttons>
        <content>
            <Wizard
                id="wizardMode"
                width="100%"
                height="100%"
                backgroundDesign="Transparent"
                showNextButton="false"
                renderMode="Page"
                navigationChange="handleNavigationChange"
            >
                <steps>
                    <WizardStep title="Scegli una ModalitÃ ">
                        <core:Fragment
                            fragmentName="cles.agenti.view.fragment.wizard.Step1"
                            type="XML"
                        />
                    </WizardStep>
                    <WizardStep title="Informazioni obbligatorie">
                        <core:Fragment
                            fragmentName="cles.agenti.view.fragment.wizard.Step2"
                            type="XML"
                        />
                    </WizardStep>
                    <WizardStep title="Informazioni cliente">
                        <core:Fragment
                            fragmentName="cles.agenti.view.fragment.wizard.Step3"
                        />
                    </WizardStep>
                </steps>
            </Wizard>
        </content>
    </Dialog>
</core:FragmentDefinition>
