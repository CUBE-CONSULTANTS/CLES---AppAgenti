<mvc:View
    xmlns:uxap="sap.uxap"
    displayBlock="true"
    controllerName="cles.agenti.controller.Main"
    height="100%"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:m="sap.m"
    xmlns:f="sap.f"
    xmlns:core="sap.ui.core"
    xmlns:form="sap.ui.layout.form"
>
    <uxap:ObjectPageLayout
        id="objectPageOrdine"
        showEditHeaderButton="false"
        showTitleInHeaderContent="false"
        alwaysShowContentHeader="false"
        useIconTabBar="true"
        backgroundDesignAnchorBar="Transparent"
        preserveHeaderStateOnScroll="true"
        headerContentPinnable="true"
        isChildPage="false"
        upperCaseAnchorBar="true"
        showHeaderContent="true"
        showFooter="true"
        sectionChange=".onObjectPageSectionChange"
        toggleHeaderOnTitleClick="true"
    >
        <uxap:headerTitle>
            <core:Fragment
                fragmentName="cles.agenti.view.fragment.ordine.HeaderTitle"
                type="XML"
            />
        </uxap:headerTitle>
        <uxap:headerContent>
            <core:Fragment
                fragmentName="cles.agenti.view.fragment.ordine.HeaderContent"
                type="XML"
            />
        </uxap:headerContent>
        <uxap:sections>
            <uxap:ObjectPageSection
                id="storicoOrdini"
                title="Storico Ordini"
                showTitle="false"
                visible="{= 
                  (${proposta>/header/mode} === 'ORDINE' &amp;&amp; ${proposta>/header/tabOrdine} === 'STORICO') ? true :
                  ${proposta>/header/mode} === 'OFFERTA' ? true :
                  false 
                }"
            >
                <uxap:subSections>
                    <uxap:ObjectPageSubSection>
                        <core:Fragment
                            fragmentName="cles.agenti.view.fragment.ordine.tab.StoricoOrdini"
                            type="XML"
                        />
                    </uxap:ObjectPageSubSection>
                </uxap:subSections>
            </uxap:ObjectPageSection>
            <uxap:ObjectPageSection
                id="offertaOrdini"
                title="Offerta"
                showTitle="false"
                visible="{= (${proposta>/header/mode} === 'ORDINE' &amp;&amp; ${proposta>/header/tabOrdine} === 'OFFERTA') ? true : false }"
            >
                <uxap:subSections>
                    <uxap:ObjectPageSubSection>
                        <core:Fragment
                            fragmentName="cles.agenti.view.fragment.ordine.tab.Offerta"
                            type="XML"
                        />
                    </uxap:ObjectPageSubSection>
                </uxap:subSections>
            </uxap:ObjectPageSection>
            <uxap:ObjectPageSection
                id="propostaProdotti"
                title="Proposta Prodotti"
                showTitle="false"
                visible="{= (${proposta>/header/mode} === 'ORDINE' || ${proposta>/header/mode} === 'OFFERTA') ? true : false }"
            >
                <uxap:subSections>
                    <uxap:ObjectPageSubSection>
                        <core:Fragment
                            fragmentName="cles.agenti.view.fragment.ordine.tab.PropostaProdotti"
                            type="XML"
                        />
                    </uxap:ObjectPageSubSection>
                </uxap:subSections>
            </uxap:ObjectPageSection>
            <uxap:ObjectPageSection
                id="catalogo"
                title="Catalogo"
                showTitle="false"
            >
                <uxap:subSections>
                    <uxap:ObjectPageSubSection>
                        <core:Fragment
                            fragmentName="cles.agenti.view.fragment.ordine.tab.Catalogo"
                            type="XML"
                        />
                    </uxap:ObjectPageSubSection>
                </uxap:subSections>
            </uxap:ObjectPageSection>
        </uxap:sections>
        <uxap:footer>
            <core:Fragment
                fragmentName="cles.agenti.view.fragment.ordine.Footer"
                type="XML"
            />
        </uxap:footer>
    </uxap:ObjectPageLayout>
</mvc:View>
