<core:FragmentDefinition xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <HBox >
        <VBox visible="{= ${device>/system/phone} ? false : true }"
            width="{= ${device>/system/desktop} ? '25%' : ${device>/system/tablet} ? '30%' : 'auto' }">
            <Panel height="auto"
                headerText="Ordinamento"
                backgroundDesign="Solid">
                <FlexBox direction="{= ${device>/system/desktop} ? 'Row' : 'Column' }"
                    justifyContent="SpaceBetween">
                    <VBox >
                        <Label design="Bold"
                            text="Modalità" />
                        <RadioButtonGroup >
                            <RadioButton text="Crescente" />
                            <RadioButton text="Decrescente" />
                        </RadioButtonGroup>
                    </VBox>
                    <VBox >
                        <Label design="Bold"
                            text="Caratteristiche" />
                        <RadioButtonGroup >
                            <RadioButton text="Categoria" />
                            <RadioButton text="Descrizione" />
                            <RadioButton text="Giacenza" />
                        </RadioButtonGroup>
                    </VBox>
                </FlexBox>
            </Panel>
            <Panel height="auto"
                headerText="Filtri"
                backgroundDesign="Solid">
                <HBox justifyContent="SpaceBetween"
                    alignItems="Center">
                    <Label text="Categoria"
                        design="Bold" />
                    <Button text="Resetta" />
                </HBox>
                <Select>
                    <items>
                        <core:Item text="Tutti"
                            key="all" />
                        <core:Item text="Aperitivi"
                            key="elec" />
                        <core:Item text="Carni Rosse"
                            key="can" />
                        <core:Item text="Carni Bianche"
                            key="info" />
                    </items>
                </Select>

                <HBox justifyContent="SpaceBetween"
                    alignItems="Center"
                    class="sapUiMediumMarginTop">
                    <Label text="Caratteristiche"
                        design="Bold" />
                </HBox>
                <HBox justifyContent="SpaceBetween"
                    wrap="Wrap"
                    class="sapUiTinyMarginTop">
                    <ObjectStatus class="sapUiTinyMarginBegin"
                        text="Top Seller"
                        active="true"
                        inverted="true"
                        state="Indication15" />
                    <ObjectStatus class="sapUiTinyMarginBegin"
                        text="Gluten Free"
                        active="true"
                        inverted="true"
                        state="Indication14" />
                    <ObjectStatus class="sapUiTinyMarginBegin"
                        text="Stock limitato"
                        active="true"
                        inverted="true"
                        state="Indication17" />
                    <ObjectStatus class="sapUiTinyMarginBegin"
                        text="In arrivo"
                        active="true"
                        inverted="true"
                        state="Indication12" />
                </HBox>

                <HBox justifyContent="SpaceBetween"
                    alignItems="Center">

                    <Label text="Listino (€)"
                        design="Bold"
                        class="sapUiMediumMarginTop" />
                </HBox>
                <RangeSlider showAdvancedTooltip="true"
                    min="0"
                    max="1000"
                    width="100%"
                    class="sapUiMediumMarginBottom" />

                <HBox justifyContent="SpaceBetween"
                    alignItems="Center">
                    <Label text="Disponibilità"
                        design="Bold"
                        class="sapUiTinyMarginTop" />
                    <CheckBox />
                </HBox>

                <HBox justifyContent="SpaceBetween"
                    alignItems="Center">
                    <Label text="Ultimo Ordine"
                        design="Bold"
                        class="sapUiTinyMarginTop" />
                    <CheckBox />
                </HBox>

            </Panel>
        </VBox>
        <VBox width="{= ${device>/system/desktop} ? '75%' : ${device>/system/tablet} ? '70%' : '100%' }">
            <List id="catalogo_odv"
                width="100%"
                mode="None"
                growing="true"
                growingThreshold="20"
                growingScrollToLoad="true"
                sticky="HeaderToolbar,ColumnHeaders,InfoToolbar"
                items="{proposta>/table/items}">
                <headerToolbar>
                    <OverflowToolbar design="Solid"
                        style="Clear">
                        <HBox alignItems="Center"
                            alignContent="Center"
                            visible="{= ${main>/header/mode/selectedKey} === 'PRE' ? true : false }">
                            <Label class="sapUiTinyMarginEnd"
                                text="Proponi Posizioni"
                                design="Bold" />
                            <Input showValueHelp="true" />
                        </HBox>
                        <ToolbarSpacer />
                        <Button text="Ordina e Filtra"
                            type="Emphasized"
                            icon="sap-icon://action-settings"
                            visible="{device>/system/phone}"
                            press=".onFilterPress" />
                    </OverflowToolbar>
                </headerToolbar>
                <infoToolbar>
                    <Toolbar design="Solid"
                        style="Clear">


                        <SearchField placeholder="Cerca per categoria o codice/descrizione"
                            showSearchButton="false"
                            liveChange="onSearch" />
                    </Toolbar>
                </infoToolbar>
                <items>
                    <CustomListItem type="Active"
                        press=".onProductListItemPress($event, 'CATALOGO')">
                        <HBox>
                            <Image src="{proposta>src}"
                                lazyLoading="true"
                                width="10rem"
                                height="10rem"
                                press=".onShowPhotoPress" />
                            <HBox width="100%"
                                wrap="Wrap"
                                class="sapUiSmallMarginBegin"
                                alignContent="Center"
                                alignItems="Center"
                                justifyContent="SpaceBetween">
                                <VBox class="sapUiTinyMargin">
                                    <Label wrapping="true"
                                        design="Bold"
                                        text="Categoria: {proposta>category}" />
                                    <Label wrapping="true"
                                        design="Bold"
                                        text="Prodotto: {proposta>product}" />
                                    <Label wrapping="true"
                                        design="Bold"
                                        text="Descrizione: {proposta>description}" />
                                </VBox>
                                <VBox class="sapUiTinyMargin">
                                    <Label design="Bold"
                                        text="Disponibilità: {proposta>disponibilita}" />
                                    <ProgressIndicator class="sapUiSmallMarginBottom"
                                        percentValue="50"
                                        showValue="false"
                                        state="Error" />
                                    <ObjectStatus text="{proposta>status_text}"
                                        active="true"
                                        inverted="true"
                                        state="{proposta>status_state}" />
                                </VBox>
                                <VBox>
                                    <Button text="Aggiungi alla Proposta Prodotti"
                                        icon="sap-icon://add"
                                        type="Emphasized" />
                                </VBox>
                            </HBox>
                        </HBox>
                    </CustomListItem>
                </items>
            </List>
        </VBox>
    </HBox>
</core:FragmentDefinition>