<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.f"
    xmlns:card="sap.f.cards"
>
    <f:Card>
        <f:header>
            <card:Header
                title="{proposta>/header/customer/name}"
                subtitle="Riepilogo totali | EUR"
            />
        </f:header>
        <f:content>
            <VBox width="100%">
                <HBox>
                    <ObjectStatus
                        class="sapUiTinyMargin"
                        text="PARTITE SCADUTE"
                        active="false"
                        inverted="true"
                        state="Error"
                        icon="sap-icon://warning"
                    />
                    <ObjectStatus
                        class="sapUiTinyMargin"
                        text="FIDO TRA 1% E 2%"
                        active="false"
                        inverted="true"
                        state="Warning"
                        icon="sap-icon://warning"
                    />
                </HBox>
                <HBox
                    class="sapUiSmallMargin"
                    justifyContent="SpaceBetween"
                    alignContent="SpaceBetween"
                >
                    <VBox>
                        <Label
                            design="Bold"
                            text="Totale Imponibile"
                        />
                        <ObjectNumber
                            state="Success"
                            inverted="true"
                            number="270.00"
                            unit="€"
                            emphasized="true"
                        />
                    </VBox>
                    <VBox>
                        <Label
                            design="Bold"
                            text="Totale IVA"
                        />
                        <ObjectNumber
                            state="Warning"
                            inverted="true"
                            number="329.40"
                            unit="€"
                            emphasized="true"
                        />
                    </VBox>
                </HBox>
            </VBox>
        </f:content>
    </f:Card>
</core:FragmentDefinition>
