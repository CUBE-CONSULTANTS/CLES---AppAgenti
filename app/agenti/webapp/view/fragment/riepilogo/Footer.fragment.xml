<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>
    <OverflowToolbar>
        <ToolbarSpacer />
        <Button
            class="sapUiTinyMargin"
            text="Crea Ordine"
            type="{= ${proposta>/header/mode} === 'ORDINE' ? 'Success' : 'Ghost' }"
            icon="sap-icon://sales-order"
            press=".onRiepilogoPress"
        />
        <Button
            class="sapUiTinyMargin"
            text="Crea Offerta"
            type="{= ${proposta>/header/mode} === 'OFFERTA' ? 'Success' : 'Ghost' }"
            icon="sap-icon://sales-quote"
            press=".onRiepilogoPress"
        />
        <Button
            class="sapUiTinyMargin"
            text="Crea Preordine"
            type="{= ${proposta>/header/mode} === 'PREORDINE' ? 'Success' : 'Ghost' }"
            icon="sap-icon://sales-document"
            press=".onRiepilogoPress"
        />
    </OverflowToolbar>
</core:FragmentDefinition>
