<core:FragmentDefinition xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <FlexBox width="100%"
        alignItems="Start"
        direction="{= ${device>/system/phone} ? 'Column' : 'Row' }"
        justifyContent="SpaceBetween">
        <VBox width="{= ${device>/system/phone} ? '100%' : '50%' }"
            class="sapUiTinyMarginBottom">
            <HBox alignContent="Center">
                <ObjectStatus class="sapUiSmallMarginBottom"
                    text="VERIFICA PARTITE"
                    active="true"
                    inverted="true"
                    state="Information"
                    icon="sap-icon://hint" />
                <ObjectStatus class="sapUiSmallMarginBottom sapUiTinyMarginBegin"
                    text="ESISTONO PARTITE SCADUTE"
                    active="true"
                    inverted="true"
                    state="Error"
                    icon="sap-icon://error" />
                
            </HBox>
            <Label text="Cliente:"
                design="Bold" />
            <Input showValueHelp="true"
                valueHelpRequest=".onCustomerValueHelpRequest"
                value="{main>/header/customer/name}" />
            <Label class="sapUiTinyMarginTop"
                text="Note di Testata:"
                design="Bold" />
            <TextArea rows="4"
                cols="120"
                value="{main>/header/notes/value}" />
        </VBox>
        <ScrollContainer height="205px"
            width="{ ${device>/system/phone} ? '100%' : '400px'}"
            horizontal="false"
            vertical="true">
            <List items="{main>/header/attachments/items}">
                <headerToolbar>
                    <OverflowToolbar width="100%">
                        <Title titleStyle="H5"
                            text="Allegati di Testata" />
                        <ToolbarSpacer />
                        <Button icon="sap-icon://add"
                            type="Emphasized"
                            press=".onHeaderAttachmentPress" />
                    </OverflowToolbar>
                </headerToolbar>
                <items>
                    <CustomListItem type="Active"
                        press=".onHeaderAttachmentItemPress">
                        <HBox width="100%"
                            alignItems="Center"
                            justifyContent="SpaceBetween">
                            <Text class="sapUiTinyMarginBeginEnd"
                                wrapping="true"
                                text="{main>data}" />
                            <Text class="sapUiTinyMarginBeginEnd"
                                wrapping="true"
                                text="{main>nome}" />
                            <Button class="sapUiTinyMarginBeginEnd"
                                type="Negative"
                                icon="sap-icon://delete"
                                press=".onHeaderAttachmentDeletePress" />
                        </HBox>
                    </CustomListItem>
                </items>
            </List>
        </ScrollContainer>
    </FlexBox>
</core:FragmentDefinition>