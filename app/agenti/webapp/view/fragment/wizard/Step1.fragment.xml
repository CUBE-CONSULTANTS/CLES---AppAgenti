<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.f"
    xmlns:card="sap.f.cards"
    xmlns:grid="sap.ui.layout.cssgrid"
>
    <grid:CSSGrid
        width="100%"
        class="cardGrid"
        items="{/step1/cards}"
    >
        <grid:customLayout>
            <grid:GridResponsiveLayout>
                <grid:layoutS>
                    <grid:GridSettings
                        gridTemplateColumns="1fr"
                        gridGap="1rem"
                    />
                </grid:layoutS>
                <grid:layout>
                    <grid:GridSettings
                        gridTemplateColumns="1fr 1fr"
                        gridGap="1rem"
                    />
                </grid:layout>
                <grid:layoutXL>
                    <grid:GridSettings
                        gridTemplateColumns="1fr 1fr 1fr"
                        gridTemplateRows="1fr auto"
                        gridGap="1rem"
                    />
                </grid:layoutXL>
            </grid:GridResponsiveLayout>
        </grid:customLayout>
        <grid:items>
            <f:Card
                class="clickableCard"
                width="100%"
                semanticRole="ListItem"
                press=".onWizardCardPress"
            >
                <f:header>
                    <card:Header title="{cardHeader/title}" />
                </f:header>

                <f:content>
                    <VBox
                        class="sapUiTinyMargin"
                        justifyContent="SpaceBetween"
                        alignItems="Center"
                        alignContent="Center"
                    >
                        <Image
                            width="{= 
                              ${device>/system/desktop} ? '75%' :
                              ${device>/system/tablet} ? '75%' : 
                              '100%'
                            }"
                            src="{cardContent/src}"
                        />
                        <Text text="{cardContent/text}" />
                    </VBox>
                </f:content>
            </f:Card>
        </grid:items>
    </grid:CSSGrid>
</core:FragmentDefinition>
