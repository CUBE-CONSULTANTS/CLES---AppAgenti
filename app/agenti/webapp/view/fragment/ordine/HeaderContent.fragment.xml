<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:form="sap.ui.layout.form"
>
    <VBox
        visible="{= (${proposta>/header/mode} === 'PREORDINE' || ${proposta>/header/mode} === 'SKIP') ? false : true }"
    >
        <Label text="Cliente" />
        <Title
            text="{proposta>/header/customer/name}"
            wrapping="true"
        />
    </VBox>
    <VBox visible="{= ${proposta>/header/mode} === 'PREORDINE' ? true : false }">
        <Label text="Titolo" />
        <Title
            text="{proposta>/header/title/value}"
            wrapping="true"
        />
    </VBox>
    <VBox
        visible="{= (${proposta>/header/mode} === 'ORDINE' || ${proposta>/header/mode} === 'SKIP') ? false : true }"
    >
        <Label text="Data ValiditÃ " />
        <Title
            text="{
              path: 'proposta>/header/date/value',
              formatter: '.formatter.formatDate' 
            }"
            wrapping="true"
        />
    </VBox>
    <HBox>
        <ObjectStatus
            class="sapUiTinyMargin"
            text="PARTITE SCADUTE"
            active="false"
            inverted="true"
            state="Error"
            icon="sap-icon://warning"
        />
        <ObjectStatus
            class="sapUiTinyMargin"
            text="FIDO TRA 1% E 2%"
            active="false"
            inverted="true"
            state="Warning"
            icon="sap-icon://warning"
        />
    </HBox>
</core:FragmentDefinition>
