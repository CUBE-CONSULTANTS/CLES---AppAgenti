<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:form="sap.ui.layout.form"
>
    <VBox
        visible="{= (${proposta>/header/mode} === 'PREORDINE' || ${proposta>/header/mode} === 'SKIP') ? false : true }"
    >
        <ObjectStatus
            press=".onCustomerObjectPagePress"
            text="{proposta>/objectPageLayout/mode}: {proposta>/objectPageLayout/title}"
            inverted="true"
            active="true"
            icon="sap-icon://information"
            state="Indication14"
        />
    </VBox>
    <VBox
        visible="{= ${proposta>/header/mode} === 'PREORDINE' ? true : false }"
    >
        <ObjectStatus
            text="{proposta>/objectPageLayout/mode}: {proposta>/objectPageLayout/title}"
            inverted="true"
            active="false"
            state="Indication14"
        />
    </VBox>
    <VBox
      class="sapUiTinyMarginTop"
        visible="{= (${proposta>/header/mode} === 'ORDINE' || ${proposta>/header/mode} === 'SKIP') ? false : true }"
    >
      <ObjectStatus
            text="{
              path: 'proposta>/header/date/value',
              formatter: '.formatter.formatDate' 
            }"
            inverted="true"
            active="false"
            state="Indication12"
        />
    </VBox>
    <HBox>
        <ObjectStatus
            class="sapUiTinyMarginTop"
            text="PARTITE SCADUTE"
            active="false"
            inverted="true"
            state="Error"
            icon="sap-icon://warning"
        />
        <ObjectStatus
            class="sapUiTinyMarginTop sapUiTinyMarginBegin"
            text="FIDO TRA 1% E 2%"
            active="false"
            inverted="true"
            state="Warning"
            icon="sap-icon://warning"
        />
    </HBox>
</core:FragmentDefinition>
