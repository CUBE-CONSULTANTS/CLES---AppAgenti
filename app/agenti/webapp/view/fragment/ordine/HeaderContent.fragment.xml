<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:form="sap.ui.layout.form"
>
    <VBox
        visible="{= (${proposta>/header/mode} === 'PRE' || ${proposta>/header/mode} === 'SKIP') ? false : true }"
    >
        <Label text="Cliente" />
        <Title
            text="{proposta>/header/customer/name}"
            wrapping="true"
        />
        <HBox>
            <ObjectStatus
                class="sapUiTinyMargin"
                text="PARTITE SCADUTE"
                active="false"
                inverted="true"
                state="Error"
                icon="sap-icon://warning"
            />
            <ObjectStatus
                class="sapUiTinyMargin"
                text="FIDO TRA 1% E 2%"
                active="false"
                inverted="true"
                state="Warning"
                icon="sap-icon://warning"
            />
        </HBox>
    </VBox>
    <VBox visible="{= ${proposta>/header/mode} === 'PRE' ? true : false }">
        <Label text="Titolo" />
        <Title
            text="{proposta>/header/title/name}"
            wrapping="true"
        />
    </VBox>
    <VBox
        visible="{= (${proposta>/header/mode} === 'ORD' || ${proposta>/header/mode} === 'SKIP') ? false : true }"
    >
        <Label text="Data ValiditÃ " />
        <Title
            text="{proposta>/header/date/value}"
