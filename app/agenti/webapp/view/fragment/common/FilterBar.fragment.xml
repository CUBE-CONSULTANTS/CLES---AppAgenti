<core:FragmentDefinition
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
    xmlns:grid="sap.ui.layout.cssgrid"
>
    <grid:CSSGrid>
        <grid:customLayout>
            <grid:GridResponsiveLayout>
                <grid:layoutS>
                    <grid:GridSettings
                        gridTemplateColumns="1fr"
                        gridGap="0.1rem"
                    />
                </grid:layoutS>
                <grid:layout>
                    <grid:GridSettings
                        gridTemplateColumns="1fr 1fr"
                        gridGap="1rem"
                    />
                </grid:layout>
                <grid:layoutXL>
                    <grid:GridSettings
                        gridTemplateColumns="1fr 1fr 1fr"
                        gridGap="1rem"
                    />
                </grid:layoutXL>
            </grid:GridResponsiveLayout>
        </grid:customLayout>
        <VBox width="100%" visible="{= ${proposta>/objectPageLayout/currentList} === 'offerta_list' }">
            <Label
                text="Offerta:"
                design="Bold"
            />
            <Input
                showValueHelp="true"
            />
        </VBox>
        <VBox width="100%">
            <Label
                text="Categorie"
                design="Bold"
            />
            <MultiComboBox
                placeholder="Categorie"
                items="{
                      path: 'proposta>/table/toolbar/filtri/categorie', 
                      sorter: { path: 'text', descending: false}
                    }"
            >
                <items>
                    <core:Item
                        key="{proposta>key}"
                        text="{proposta>text}"
                    />
                </items>
            </MultiComboBox>
        </VBox>
        <VBox width="100%">
            <Label
                text="Caratteristiche"
                design="Bold"
            />
            <MultiComboBox
                placeholder="Caratteristiche"
                items="{
                      path: 'proposta>/table/toolbar/filtri/caratteristiche', 
                      sorter: { path: 'text', descending: false}
                    }"
            >
                <items>
                    <core:Item
                        key="{proposta>key}"
                        text="{proposta>text}"
                    />
                </items>
            </MultiComboBox>
        </VBox>
        <VBox width="100%">
            <Label
                text="Cerca"
                design="Bold"
            />
            <SearchField
                placeholder="Cerca per categoria o codice/descrizione"
                showSearchButton="false"
                liveChange=".onSearch($event, 'catalogo_odv')"
            />
        </VBox>
    </grid:CSSGrid>
</core:FragmentDefinition>
