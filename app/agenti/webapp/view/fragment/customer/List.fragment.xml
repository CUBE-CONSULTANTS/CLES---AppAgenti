<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>
    <List
        items="{/step2/customer/items}"
        sticky="HeaderToolbar,InfoToolbar"
    >
        <headerToolbar>
            <OverflowToolbar
                design="Transparent"
                style="Clear"
            >
                <ToolbarSpacer />
                <Button
                    text="Crea anagrafica cliente"
                    type="Emphasized"
                    tooltip="Crea una nuova anagrafica di un cliente"
                    icon="sap-icon://write-new"
                    press=".onCustomerCreatePress"
                />
                <Button
                    text="Segnala informazioni mancanti/errate"
                    type="Critical"
                    tooltip="Apre il menù delle segnalazioni"
                    icon="sap-icon://warning"
                    press=".onCustomerReportPress"
                />
            </OverflowToolbar>
        </headerToolbar>
        <infoToolbar>
            <OverflowToolbar
                design="Transparent"
                style="Clear"
            >
                <SearchField
                    placeholder="Cerca per cliente, descrizione o città"
                />
            </OverflowToolbar>
        </infoToolbar>
        <items>
            <CustomListItem
                type="Active"
                press=".onCustomerListSelect"
            >
                <HBox
                    class="sapUiResponsiveMargin"
                    alignItems="Center"
                    justifyContent="SpaceBetween"
                >
                    <VBox>
                        <ObjectStatus
                            text="{id} - {city}"
                            inverted="true"
                            state="Information"
                        />
                        <Text
                            class="sapUiTinyMarginTop"
                            text="{name}"
                        />
                    </VBox>
                    <VBox>
                        <Button
                          press=".onCustomerInfoPress"
                            text="{= ${device>/system/phone} ? '' : 'Informazioni Cliente'}"
                            icon="sap-icon://information"
                        />
                    </VBox>
                </HBox>
            </CustomListItem>
        </items>
    </List>
</core:FragmentDefinition>
