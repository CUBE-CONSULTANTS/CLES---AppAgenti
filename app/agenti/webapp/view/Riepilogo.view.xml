<mvc:View
    controllerName="cles.agenti.controller.Riepilogo"
    displayBlock="true"
    height="100%"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:uxap="sap.uxap"
    xmlns:form="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
>
    <uxap:ObjectPageLayout
        showEditHeaderButton="false"
        showTitleInHeaderContent="false"
        alwaysShowContentHeader="false"
        useIconTabBar="false"
        backgroundDesignAnchorBar="Transparent"
        preserveHeaderStateOnScroll="true"
        headerContentPinnable="true"
        isChildPage="false"
        upperCaseAnchorBar="true"
        showHeaderContent="true"
        showFooter="true"
    >
        <uxap:headerTitle>
            <core:Fragment
                fragmentName="cles.agenti.view.fragment.ordine.HeaderTitle"
                type="XML"
            />
        </uxap:headerTitle>
        <uxap:headerContent>
            <core:Fragment
                fragmentName="cles.agenti.view.fragment.ordine.HeaderContent"
                type="XML"
            />
        </uxap:headerContent>
        <uxap:sections>
            <uxap:ObjectPageSection
                title="Articoli ({proposta>/table/items/length})"
                showTitle="false"
            >
                <uxap:subSections>
                    <uxap:ObjectPageSubSection>
                        <core:Fragment
                            fragmentName="cles.agenti.view.fragment.riepilogo.Lista"
                            type="XML"
                        />
                    </uxap:ObjectPageSubSection>
                </uxap:subSections>
            </uxap:ObjectPageSection>
            <uxap:ObjectPageSection
                title="Totali"
                showTitle="false"
            >
                <uxap:subSections>
                    <uxap:ObjectPageSubSection>
                        <core:Fragment
                            fragmentName="cles.agenti.view.fragment.riepilogo.Totali"
                            type="XML"
                        />
                    </uxap:ObjectPageSubSection>
                </uxap:subSections>
            </uxap:ObjectPageSection>
            <uxap:ObjectPageSection
                title="Chiusura"
                showTitle="false"
            >
                <uxap:subSections>
                    <uxap:ObjectPageSubSection>
                        <core:Fragment
                            fragmentName="cles.agenti.view.fragment.riepilogo.Chiusura"
                            type="XML"
                        />
                    </uxap:ObjectPageSubSection>
                </uxap:subSections>
            </uxap:ObjectPageSection>
        </uxap:sections>
        <uxap:footer>
            <core:Fragment
                fragmentName="cles.agenti.view.fragment.riepilogo.Footer"
                type="XML"
            />
        </uxap:footer>
    </uxap:ObjectPageLayout>
</mvc:View>
