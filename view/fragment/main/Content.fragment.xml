<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>
    <VBox class="sapUiTinyMargin">
        <VBox class="sapUiTinyMarginBottom">
            <Label
                text="Modalità:"
                design="Bold"
            />
            <SegmentedButton
                width="{= ${device>/system/phone} ? '20rem' : '25rem'}"
                selectedKey="{main>/header/mode/selectedKey}"
                items="{main>/header/mode/items}"
            >
                <items>
                    <SegmentedButtonItem
                        key="{main>key}"
                        text="{main>text}"
                    />
                </items>
            </SegmentedButton>
        </VBox>
        <VBox
            class="sapUiTinyMarginBottom"
            width="{= ${device>/system/phone} ? '100%' : '50%' }"
            visible="{= ${main>/header/mode/selectedKey} === 'PRE' ? false : true }"
        >
            <Label
                required="true"
                text="Cliente:"
                design="Bold"
            />
            <Input
                showValueHelp="true"
                valueHelpRequest=".onCustomerValueHelpRequest"
                value="{main>/header/customer/name}"
            />
        </VBox>
        <VBox
            class="sapUiTinyMarginBottom"
            width="{= ${device>/system/phone} ? '100%' : '50%' }"
            visible="{= ${main>/header/mode/selectedKey} === 'PRE' ? true : false }"
        >
            <Label
                required="true"
                text="Titolo:"
                design="Bold"
            />
            <Input
                showValueHelp="true"
                valueHelpRequest=".onPreorderValueHelpRequest"
                value="{main>/header/title/value}"
            />
        </VBox>
        <VBox
            class="sapUiTinyMarginBottom"
            width="{= ${device>/system/phone} ? '100%' : '50%' }"
            visible="{= ${main>/header/mode/selectedKey} === 'ORD' ? false : true }"
        >
            <Label
                required="true"
                text="Data di Validità:"
                design="Bold"
            />
            <DatePicker dateValue="{main>/header/date/value}" />
        </VBox>
        <VBox
            class="sapUiTinyMarginBottom"
            width="{= ${device>/system/phone} ? '100%' : '50%' }"
        >
            <Label
                text="Note di Testata:"
                design="Bold"
            />
            <TextArea
                rows="4"
                cols="120"
                value="{main>/header/notes/value}"
            />
        </VBox>
    </VBox>
</core:FragmentDefinition>
