<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>
    <Toolbar>
        <ToolbarSpacer />
        <Button
            press=".onCreaDocumentoPress"
            icon="{= ${main>/header/mode/selectedKey} === 'OFF' ? 'sap-icon://sales-order' : 'sap-icon://notes' }"
            text="{= 
              ${main>/header/mode/selectedKey} === 'ORD' ? 'Crea Ordine' :
              ${main>/header/mode/selectedKey} === 'OFF' ? 'Crea Offerta' : 
              'Crea Preordine' 
            }"
            type="Emphasized"
        />
    </Toolbar>
</core:FragmentDefinition>
