<core:FragmentDefinition xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <QuickView id="quickView" placement="Top">
        <QuickViewPage pageId="{storico>id}"
            header="{storico>title}"
            title="{storico>title}"
            description="{storico>SalesOrderDescription}"
            groups="{
				path: 'groups',
				templateShareable: false
			}">
            <QuickViewGroup heading="{storico>heading}"
                elements="{
					path: 'elements',
					templateShareable: false
				}">
                <QuickViewGroupElement label="{storico>label}"
                    value="{storico>value}"
                    url="{storico>url}"
                    type="{storico>elementType}"
                    emailSubject="{storico>emailSubject}">
                </QuickViewGroupElement>
            </QuickViewGroup>
            <avatar>
                <Avatar src="{storico>icon}"
                    displayShape="Square" />
            </avatar>
        </QuickViewPage>
    </QuickView>
</core:FragmentDefinition>