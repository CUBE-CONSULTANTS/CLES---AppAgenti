                    type="Emphasized"
                    icon="sap-icon://add"
                    press=".onAddRowPress" />
            </OverflowToolbar>
        </headerToolbar>
        <infoToolbar>
            <Toolbar design="Solid"
                style="Clear">
                <SearchField placeholder="Cerca per categoria o descrizione"
                    showSearchButton="false"
                    liveChange="onSearch" />
            </Toolbar>
        </infoToolbar>
        <columns>
            <Column demandPopin="true"
                width="12em"
                popinDisplay="Block"
                minScreenWidth="Desktop"
                visible="{proposta>/table/columns/categoryColumnVisible}">
