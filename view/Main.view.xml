<mvc:View xmlns:core="sap.ui.core"
    xmlns:f="sap.f"
    controllerName="cles.agenti.controller.Main"
    xmlns:l="sap.ui.layout"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:tnt="sap.tnt"
    xmlns="sap.m">
    <f:DynamicPage id="dettaglio_ordine"
        headerExpanded="true"
        toggleHeaderOnTitleClick="false"
        fitContent="false"
        showFooter="{main>/showFooter}">
        <f:title>
            <core:Fragment fragmentName="cles.agenti.view.fragment.DynamicPageTitle"
                type="XML" />
        </f:title>
        <f:header>
            <f:DynamicPageHeader backgroundDesign="Solid">
                <f:content>
                    <core:Fragment fragmentName="cles.agenti.view.fragment.DynamicPageHeader"
                        type="XML" />
                </f:content>
            </f:DynamicPageHeader>
        </f:header>
        <f:content>
            <IconTabBar selectedKey="0">
                <items>
                    <IconTabFilter text="Proposta Prodotti"
                        key="0">
                        <content>
                            <FlexBox height="{= ${device>/resize/height} - 420}px">
                                <tnt:SideNavigation selectedKey="Categorie"
                                    expanded="true" visible="{= ${device>/system/phone} ? false : true }">
                                    <tnt:NavigationList selectedKey="ALL"
                                        items="{main>/body/table/menu/items}">
                                        <tnt:NavigationListItem text="{main>text}"
                                            key="{main>key}"
                                            icon="{main>icon}"
                                            items="{main>items}">
                                            <tnt:NavigationListItem key="{main>key}"
                                                text="{main>text}" press=".onCategoryListItemPress" />
                                        </tnt:NavigationListItem>
                                    </tnt:NavigationList>
                                </tnt:SideNavigation>
                                <ScrollContainer vertical="true" height="{= ${device>/resize/height} - 420}px">
                                    <core:Fragment fragmentName="cles.agenti.view.fragment.PropostaProdotti"
                                        type="XML" />
                                </ScrollContainer>
                            </FlexBox>
                        </content>
                    </IconTabFilter>
                </items>
            </IconTabBar>
        </f:content>
        <f:footer>
            <core:Fragment fragmentName="cles.agenti.view.fragment.Footer"
                type="XML" />
        </f:footer>
    </f:DynamicPage>
</mvc:View>
