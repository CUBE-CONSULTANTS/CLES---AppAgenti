<mvc:View xmlns:core="sap.ui.core"
    xmlns:f="sap.f"
    controllerName="cles.agenti.controller.Main"
    xmlns:l="sap.ui.layout"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:tnt="sap.tnt"
    xmlns:uxap="sap.uxap"
    xmlns="sap.m">
    <uxap:ObjectPageLayout showEditHeaderButton="false"
        showTitleInHeaderContent="false"
        alwaysShowContentHeader="false"
        useIconTabBar="true"
        backgroundDesignAnchorBar="Transparent"
        preserveHeaderStateOnScroll="true"
        headerContentPinnable="true"
        isChildPage="false"
        upperCaseAnchorBar="true"
        showHeaderContent="true"
        showFooter="true"
        sectionChange=".onObjectPageSectionChange">
        <uxap:headerTitle>
            <uxap:ObjectPageHeader objectTitle="Proposta Ordine" >
                <uxap:actions>
                    <core:Fragment fragmentName="cles.agenti.view.fragment.HeaderToolbar"
                        type="XML" />
                </uxap:actions>
            </uxap:ObjectPageHeader>
        </uxap:headerTitle>
        <uxap:sections>
            <uxap:ObjectPageSection title="Testata"
                showTitle="false">
                <uxap:subSections>
                    <uxap:ObjectPageSubSection >
                        <core:Fragment fragmentName="cles.agenti.view.fragment.HeaderContent"
                            type="XML" />
                    </uxap:ObjectPageSubSection>
                </uxap:subSections>
            </uxap:ObjectPageSection>
            <uxap:ObjectPageSection title="Proposta Prodotti"
                showTitle="false">
                <uxap:subSections>
                    <uxap:ObjectPageSubSection >
                        <FlexBox height="{= ${device>/system/phone} ? '100%' : (${device>/resize/height} - 215 + 'px') }">
                            <tnt:SideNavigation selectedKey="Categorie"
                                expanded="true"
                                visible="{= ${device>/system/phone} ? false : true }">
                                <tnt:NavigationList selectedKey="ALL"
                                    items="{main>/body/table/menu/items}">
                                    <tnt:NavigationListItem text="{main>text}"
                                        key="{main>key}"
                                        icon="{main>icon}"
                                        items="{main>items}">
                                        <tnt:NavigationListItem key="{main>key}"
                                            text="{main>text}"
                                            press=".onCategoryListItemPress" />
                                    </tnt:NavigationListItem>
                                </tnt:NavigationList>
                            </tnt:SideNavigation>
                            <ScrollContainer vertical="true"
                                height="{= ${device>/system/phone} ? '100%' : (${device>/resize/height} - 215 + 'px') }">
                                <core:Fragment fragmentName="cles.agenti.view.fragment.Content"
                                    type="XML" />
                            </ScrollContainer>
                        </FlexBox>
                    </uxap:ObjectPageSubSection>
                </uxap:subSections>
            </uxap:ObjectPageSection>
        </uxap:sections>
        <uxap:footer>
            <core:Fragment fragmentName="cles.agenti.view.fragment.Footer"
                type="XML" />
        </uxap:footer>
    </uxap:ObjectPageLayout>
</mvc:View>
