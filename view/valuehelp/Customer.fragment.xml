<core:FragmentDefinition
    xmlns:form="sap.ui.layout.form"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:u="sap.ui.unified"
>
    <Dialog
        stretch="false"
        contentWidth="100%"
        showHeader="false"
    >
        <buttons>
            <Button
                text="Conferma"
                press=".onCustomerValueHelpConfirm"
                visible="{= ${/iconTabBar/selectedKey} === 'FORM' ? true : false}"
                icon="sap-icon://save"
                class="sapUiTinyMargin"
                type="Success"
            />
            <Button
                text="Chiudi"
                type="Emphasized"
                press=".defaultDialogClose"
            />
        </buttons>
        <content>
            <IconTabBar selectedKey="{/iconTabBar/selectedKey}">
                <items>
                    <IconTabFilter
                        key="LISTA"
                        text="Lista Clienti"
                    >
                        <List items="{/iconTabBar/list/items}">
                            <headerToolbar>
                                <OverflowToolbar>
                                    <SearchField
                                        width="100%"
                                        placeholder="Cerca per cliente, descrizione o cittÃ "
                                    />
                                </OverflowToolbar>
                            </headerToolbar>
                            <items>
                                <StandardListItem
                                    type="Active"
                                    title="{id} - {city}"
                                    press=".onCustomerListSelect"
                                    wrapping="true"
                                    description="{name}"
                                />
                            </items>
                        </List>
                    </IconTabFilter>
                    <IconTabFilter
                        key="FORM"
                        text="Anagrafica Cliente"
                    >
                        <form:SimpleForm
                            layout="ResponsiveGridLayout"
                            columnsL="2"
                            columnsM="2"
                        >
                            <form:content>
                                <core:Title text="Dati Generali" />
                                <Label text="Indirizzo" />
                                <Input editable="false" value="" />
                                <Label text="Partita IVA" />
                                <Input editable="false" value="" />
                                <Label text="Codice SDI" />
                                <Input editable="false" value="" />
                                <Label text="Giorni di consegna" />
                                <Input editable="false" value="" />
                                <Label text="Giorni di visita" />
                                <Input editable="false" value="" />
                                <Label text="Agente" />
                                <Input editable="false" value="" />
                                <Label text="Pagatore" />
                                <Input editable="false" value="" />
                                <Label text="Termini di Pagamento" />
                                <Input editable="false" value="" />
                                <Label text="Telefono" />
                                <Input editable="false" value="" />
                                <Label text="Mail" />
                                <Input editable="false" value="" />
                                <Label text="Esposizione Fido" />
                                <Input editable="false" value="" />
                            </form:content>
                        </form:SimpleForm>
                    </IconTabFilter>
                </items>
            </IconTabBar>
        </content>
    </Dialog>
</core:FragmentDefinition>
