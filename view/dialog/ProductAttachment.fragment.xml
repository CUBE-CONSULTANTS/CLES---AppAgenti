<core:FragmentDefinition xmlns:form="sap.ui.layout.form"
    xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <Dialog showHeader="false"
        contentWidth="50%"
        stretch="false"
        title="Allegati Prodotto">
        <buttons>
            <Button text="Chiudi"
                type="Emphasized"
                press=".defaultDialogClose" />
        </buttons>
        <content>
            <VBox width="100%">
                <List items="{/attachments/items}"
                    sticky="HeaderToolbar">
                    <headerToolbar>
                        <OverflowToolbar width="100%">
                            <Title titleStyle="H5"
                                text="Allegati del prodotto" />
                            <ToolbarSpacer />
                            <Button icon="sap-icon://add"
                                type="Emphasized"
                                press=".onHeaderAttachmentPress" />
                        </OverflowToolbar>
                    </headerToolbar>
                    <items>
                        <StandardListItem type="Active"
                            press=".onHeaderAttachmentItemPress"
                            title="{nome}"
                            description="{data}" />
                    </items>
                </List>
            </VBox>
        </content>
    </Dialog>
</core:FragmentDefinition>