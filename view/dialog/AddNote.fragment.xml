<core:FragmentDefinition xmlns:form="sap.ui.layout.form" xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <Dialog title="Aggiungi Note">
        <buttons>
            <Button text="Chiudi" type="Emphasized" press=".defaultDialogClose"/>
        </buttons>
        <content>
            <form:SimpleForm >
                <Label text="Prodotto" design="Bold" />
                <Text text="{/prodotto/id} - {/prodotto/description}"/>
                <Label text="Istruzione di Produzione" design="Bold" />
                <TextArea rows="4" value="{/prodotto/notes/0/nota_1}"/>
                <Label text="Note di imballaggio" design="Bold" />
                <TextArea rows="4"/>
                <Label text="Appunto posizione" design="Bold" />
                <TextArea rows="4"/>
            </form:SimpleForm>
        </content>
    </Dialog>
</core:FragmentDefinition>