<core:FragmentDefinition xmlns:form="sap.ui.layout.form"
    xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <Dialog showHeader="true" title="Scheda Tecnica Prodotto">
        <buttons>
            <Button text="Chiudi"
                type="Emphasized"
                press=".defaultDialogClose" />
        </buttons>
        <content>
            <form:SimpleForm
                layout="ResponsiveGridLayout"
                columnsXL="2"
                columnsL="2"
                columnsM="2"
                labelSpanXL="3"
                labelSpanL="3"
                labelSpanM="4"
                labelSpanS="12"
                emptySpanXL="1"
                emptySpanL="1"
                emptySpanM="0"
                emptySpanS="0"
                editable="false">

                <!-- Identificazione -->
                <core:Title text="Identificazione Prodotto" />
                <Label text="Codice Materiale" />
                <Text text="PRD-001234" />
                <Label text="Descrizione" />
                <Text text="Pasta integrale di grano duro" />
                <Label text="Categoria" />
                <Text text="Pasta" />
                <Label text="Marchio / Produttore" />
                <Text text="Pastificio Italiano S.p.A." />

                <!-- Informazioni Legali e Normative -->
                <core:Title text="Informazioni Legali e Normative" />
                <Label text="Ingredienti" />
                <Text text="Farina integrale di grano duro, acqua, fibra di grano, sale" />
                <Label text="Allergeni" />
                <Text text="Glutine" />
                <Label text="Valori Nutrizionali (100 g)" />
                <Text text="Energia 1450 kJ / 345 kcal • Grassi 2,5 g • di cui saturi 0,5 g • Carboidrati 67 g • di cui zuccheri 3,5 g • Fibre 11 g • Proteine 12 g • Sale 0,02 g" />
                <Label text="Additivi" />
                <Text text="–" />

                <!-- Logistica -->
                <core:Title text="Informazioni Logistiche" />
                <Label text="Unità di misura base" />
                <Text text="Pacco da 500 g" />
                <Label text="Peso netto / lordo" />
                <Text text="500 g / 510 g" />
                <Label text="Dimensioni imballo" />
                <Text text="L 30 cm × P 20 cm × A 5 cm" />
                <Label text="Quantità confezione / cartone / pallet" />
                <Text text="1 confezione, 12 confezioni/cartone, 72 cartoni/pallet" />

                <!-- Qualità e Sicurezza -->
                <core:Title text="Qualità e Sicurezza" />
                <Label text="Certificazioni" />
                <Text text="ISO 22000; BIO EU" />
                <Label text="Shelf Life totale" />
                <Text text="12 mesi" />
                <Label text="Shelf Life residua minima" />
                <Text text="3 mesi" />
                <Label text="Parametri Qualità" />
                <Text text="Umidità ≤ 12 %, Ceneri ≤ 2 %" />
                <Label text="Processo produttivo" />
                <Text text="Essiccazione lenta a bassa temperatura" />
            </form:SimpleForm>

            <Carousel width="100%" pages="{/carousel/pages}">
                <pages>
                    <Image width="50%"
                        src="{src}" />
                </pages>
            </Carousel>
        </content>
    </Dialog>
</core:FragmentDefinition>